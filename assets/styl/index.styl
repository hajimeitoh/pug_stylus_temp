.slider_sample02
  background-color #666
  .multislider-content
    &-item
      ul
        width 572px
        box-sizing border-box
        padding 4px
        overflow hidden
        li
          float left
          box-sizing border-box
          padding 4px
          a
            display block
            background-color #fff
            text-decoration none
            color #555
            img
              display block
            span
              display table-cell
              padding 0 4px
              box-sizing border-box
              height 24px
              font-size 12px
              vertical-align middle
              font-weight bold
  .multislider-controler
    &-item
      bottom 0 !important
      &-btn
        display table-cell
        height 100%
        width 33px
        text-align center
        vertical-align middle
        background-color rgba( 80, 80, 80, .9 )
        background-transparency( #515151, 0.9 )
        color #ddd
    .disabled
        opacity 1
        .multislider-controler-item-btn .fa
          opacity 0
  .multislider-indicator
    padding-bottom 8px

.sliderSyncFrom
  .multislider-content-item-inner
    position relative
    img
      display block
      position relative
      z-index 1
    &.current::before
      content ""
      absolute left top
      width 100%
      height 100%
      box-sizing border-box
      border 3px solid #fff
      z-index 2

.slider_responsive
  .multislider-content-item
    & > img
      width 100%
      height auto